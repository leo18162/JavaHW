package ch3;

import java.util.Scanner;

public class ch304 {

	public static void main(String[] args) {
		String s ="";
		Scanner scan = new Scanner(System.in);
		System.out.println("字串輸入:");
		if (scan.hasNext())
		{
			for(int i=1 ;i<=3;i++)
			{
				s= scan.next();
				System.out.println(s.length());
				System.out.println("第"+i+"次完成");
			}
		}
	}

}
